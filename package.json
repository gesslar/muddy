{
  "name": "@gesslar/muddy",
  "description": "The red-headed stepchild of muddler.",
  "author": {
    "name": "gesslar",
    "url": "https://gesslar.dev"
  },
  "version": "0.4.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/muddy.git"
  },
  "bin": "./src/cli.js",
  "type": "module",
  "files": [
    "UNLICENSE.txt",
    "src/**/*.js"
  ],
  "keywords": [
    "mud",
    "muddy",
    "muddler",
    "demuddler",
    "mudlet",
    "lua",
    "para",
    "bailar",
    "la",
    "bamba"
  ],
  "license": "Unlicense",
  "main": "src/cli.js",
  "engines": {
    "node": ">=v24.13.0"
  },
  "icon": "mud-128.png",
  "homepage": "https://github.com/gesslar/muddy",
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "types": "tsc -p tsconfig.types.json",
    "build": "mkdir -pv ./dist && pnpm pack --pack-destination ./dist/",
    "update": "pnpm self-update && pnpx npm-check-updates -u && pnpm install",
    "submit": "pnpm publish --access public --//registry.npmjs.org/:_authToken=\"${NPM_ACCESS_TOKEN}\"",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:unit": "node --test test/unit/**/*.test.js",
    "muddy": "node src/cli.js work/ThresholdUI -n",
    "pr": "gt submit -p --ai",
    "patch": "pnpm version patch",
    "minor": "pnpm version minor",
    "major": "pnpm version major"
  },
  "packageManager": "pnpm@10.29.1",
  "dependencies": {
    "@gesslar/actioneer": "^2.2.0",
    "@gesslar/colours": "^0.8.0",
    "@gesslar/toolkit": "^3.33.1",
    "adm-zip": "^0.5.16",
    "commander": "^14.0.3",
    "xmlbuilder2": "^4.0.3"
  },
  "devDependencies": {
    "@gesslar/uglier": "^1.4.0",
    "console-ninja": "^1.0.0",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3"
  }
}
